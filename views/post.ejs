<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%-include header%>
    <div class="main">
    	<h1>Post</h1>
      <%if(error){%>
        <%=error%>
      <%}%>
    	<form action="/post" method="post">
       <div>标题:</div> 
       <div><input type="text" placeholder="标题" name="title"></div> 
       <div>内容:</div> 
       <div><input type="text" placeholder="内容" name="content"></div>
       <div><button type="submit">提交</button></div> 
      </form>
    	
    </div>
	
    <%-include footer%>
  </body>
</html>